<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#101010"
		android:overScrollMode="never">
		<LinearLayout
			android:id="@+id/linear_login"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#101010"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="40dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="20dp"
				android:padding="8dp"
				android:text="Login to your account"
				android:textSize="30sp"
				android:textStyle="bold"
				android:textColor="#E0E0E0"
				android:layout_gravity="left|center_vertical" />
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="10dp"
				android:padding="8dp"
				android:background="#616161"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:translationX="1.0dp"
				android:layout_gravity="center_horizontal|center_vertical">
				<EditText
					android:id="@+id/edittext2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#BDBDBD"
					android:hint="Email or username"
					android:textColorHint="#BDBDBD"
					android:lines="1"
					
					android:maxLines="1"
					android:singleLine="true"
					android:imeOptions="actionDone" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:padding="8dp"
				android:background="#616161"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="center_horizontal|center_vertical">
				<EditText
					android:id="@+id/edittext1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#BDBDBD"
					android:hint="Password"
					android:textColorHint="#BDBDBD"
					android:lines="1"
					android:inputType="textPassword"
					android:layout_weight="1"
					
					android:maxLines="1"
					android:singleLine="true"
					android:imeOptions="actionDone" />
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear12"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal">
						<Button
							android:id="@+id/hide"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:padding="8dp"
							android:background="@drawable/ic_visibility_off_white"
							android:textSize="12sp"
							android:textColor="#000000" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear13"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal">
						<Button
							android:id="@+id/show"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:padding="8dp"
							android:background="@drawable/ic_visibility_white"
							android:textSize="12sp"
							android:textColor="#000000" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<Button
				android:id="@+id/button1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="35dp"
				android:layout_marginTop="30dp"
				android:layout_marginRight="35dp"
				android:layout_marginBottom="30dp"
				android:padding="8dp"
				android:background="#424242"
				android:text="Login"
				android:textSize="12sp"
				android:textStyle="bold"
				android:textColor="#E0E0E0"
				android:layout_gravity="center_horizontal|center_vertical" />
			<LinearLayout
				android:id="@+id/linear9"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<Button
					android:id="@+id/button3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Forget password"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#E0E0E0" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="No account\?"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#EEEEEE"
					android:layout_gravity="center_vertical" />
				<Button
					android:id="@+id/button2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:text="Sign Up"
					android:textSize="12sp"
					android:textColor="#E0E0E0"
					android:layout_gravity="right|center_vertical" />
			</LinearLayout>
			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="5dp"
				android:padding="8dp"
				android:text="Or Sign Up With"
				android:textSize="12sp"
				android:textStyle="bold"
				android:textColor="#E0E0E0"
				android:layout_gravity="center_horizontal|bottom" />
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#101010"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="center_horizontal|bottom">
				<ImageView
					android:id="@+id/imageview6"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginRight="10dp"
					android:src="@drawable/g81651084101"
					android:scaleType="fitCenter"
					android:layout_gravity="center_horizontal|center_vertical" />
				<ImageView
					android:id="@+id/imageview7"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:src="@drawable/fkfkf"
					android:scaleType="fitCenter" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
